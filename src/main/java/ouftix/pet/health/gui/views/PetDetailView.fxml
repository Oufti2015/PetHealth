<GridPane prefHeight="368.0" prefWidth="481.0"
	xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="ouftix.pet.health.gui.controllers.PetDetailController">
	<columnConstraints>
