	</columnConstraints>
	<rowConstraints>
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
		<RowConstraints />
		<RowConstraints percentHeight="5.0" />
		<RowConstraints maxHeight="195.0" minHeight="175.0"
			prefHeight="175.0" />
	</rowConstraints>
	<children>
		<Label text="Nom" />
		<TextField fx:id="nameTextField" GridPane.columnIndex="2" />
		<Label text="Nom officiel" GridPane.rowIndex="1" />
		<TextField fx:id="officialNameTextField"
			GridPane.columnIndex="2" GridPane.rowIndex="1" />
		<Label text="Type" GridPane.rowIndex="2" />
		<ComboBox fx:id="typeComboBox" prefWidth="150.0"
			GridPane.columnIndex="2" GridPane.rowIndex="2">
			<GridPane.margin>
				<Insets />
			</GridPane.margin>
		</ComboBox>
		<Label text="Race" GridPane.rowIndex="3" />
