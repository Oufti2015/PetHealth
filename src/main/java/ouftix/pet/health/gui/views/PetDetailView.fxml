			GridPane.columnIndex="2" GridPane.rowIndex="3" />
		<Label text="Date de Naissance" GridPane.rowIndex="4" />
		<DatePicker fx:id="birthDatePicker" GridPane.columnIndex="2"
			GridPane.rowIndex="4" />
		<Label text="Décès" GridPane.rowIndex="5" />
		<DatePicker fx:id="deathDatePixker" GridPane.columnIndex="2"
			GridPane.rowIndex="5" />
		<AnchorPane prefHeight="200.0" prefWidth="200.0"
			GridPane.columnSpan="3" GridPane.rowIndex="7" >
			<children>
				<fx:include fx:id="weights" source="WeightsView.fxml"
					AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
			</children>
		</AnchorPane>
	</children>
